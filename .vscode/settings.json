{
  // ESLint: https://marketplace.visualstudio.com/items?itemName=dbaeumer.vscode-eslint

  // ESLint handles HTML and JS/TS
  "eslint.validate": [
    "javascript",
    "typescript",
  ],

  // LF line endings
  "files.eol": "\n",

  // Lint on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  }
}
