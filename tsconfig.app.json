{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": [
    "src/**/*",
    ".eslintrc.cjs",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "vite/client"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "DOM.iterable"
    ],
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@gui/*": [
        "src/components/graphics/gui/*"
      ],
      "@formulas/*": [
        "src/components/formulas/*"
      ],
      "@dungeon/*": [
        "src/components/dungeon/*"
      ]
    }
  }
}