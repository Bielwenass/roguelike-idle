{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@gui/*": [
        "src/components/graphics/gui/*"
      ],
      "@formulas/*": [
        "src/components/formulas/*"
      ],
      "@dungeon/*": [
        "src/components/dungeon/*"
      ],
      "@type/*": [
        "src/types/*"
      ]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
